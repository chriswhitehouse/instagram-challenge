

  <%= form_with model: @picture do |form| %>
      <div class="container">
        <div class="post">
          <div class="post-header">
            <div class="user-image">
              <i class="far fa-user-circle fa-2x"></i>
            </div><div class="user-name">
                <h2>UserName</h2>
            </div><div class="date">
            </div>
          </div>
          <div class="picture">
            <%= form.text_area :url, size: "71x20", placeholder: "Enter Image URL here..." %>
          </div>
          <div class="menu-bar">
            <div class="menu">
              <i class="far fa-heart"></i>
              <i class="far fa-comment"></i>
            </div><div class="submit-button">
              <%= button_tag type: 'submit' do %>
                <span class="far fa-paper-plane fa-2x"></span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    <% end %>
